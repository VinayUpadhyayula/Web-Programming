{
    "compilerOptions": {
      "rootDir": "src/",
      "outDir": "./dist",
      "allowJs": true,
      "module": "es2022",
      "moduleResolution": "node",
      "lib": [
        "es2022", "dom", "dom.iterable",
      ],
      "baseUrl": ".",
      "target": "esnext",
      "esModuleInterop": true,
      "sourceMap": true,
      "jsx": "react",
      "declaration": true,
      "pretty": false,
      "noImplicitAny": true,
      "declarationMap": true,
      "strictNullChecks": true,
    },
    "include": [
      "./src/"
    ]
}